# ─── Next.js Environment Variables ───
# All client-side vars must be prefixed with NEXT_PUBLIC_
# DO NOT PUT SECRET KEYS HERE — this file is committed to git

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx_or_pk_live_xxx
NEXT_PUBLIC_SIGN_IN_URL=https://onboard.rankbee.ai/sign-in
NEXT_PUBLIC_SIGN_UP_URL=https://onboard.rankbee.ai/register

# Dashboard URL used for "View Your Dashboard" CTA
NEXT_PUBLIC_APP_URL=

# Where to send users after sign-up to complete setup
NEXT_PUBLIC_ONBOARD_URL=

# Canonical base URL for SEO tags
NEXT_PUBLIC_SITE_URL=https://rankbee.ai

# App environment: production | preprod | development
# production → GTM_ID_PROD + Intercom enabled
# preprod    → GTM_ID_STG  + Intercom enabled
# other      → GTM_ID_STG  + Intercom disabled
NEXT_PUBLIC_APP_ENV=development

# Google Tag Manager
NEXT_PUBLIC_GTM_ID_STG=GTM-XXXXSTG
NEXT_PUBLIC_GTM_ID_PROD=GTM-XXXXPROD

# PostHog (optional; can also be injected via GTM)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_public_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Intercom (optional)
NEXT_PUBLIC_INTERCOM_APP_ID=abc12345

# Calendly Embed URLs (optional overrides)
# Used for /demo and /onboarding-meeting
NEXT_PUBLIC_CALENDLY_EU=
NEXT_PUBLIC_CALENDLY_OTHERS=

# Ghost CMS API Keys
# Content API key (read-only, for fetching posts)
NEXT_PUBLIC_GHOST_CONTENT_API_KEY=4d7724b1d3ab0bbf970850bf7f
# Admin API key (server-only, required for adding newsletter subscribers)
# No NEXT_PUBLIC_ prefix — this key is never exposed to the browser
GHOST_ADMIN_API_KEY=your_admin_api_key_here

# Builder.io Visual CMS
# Get this from Builder.io → Account Settings → Public API Key
NEXT_PUBLIC_BUILDER_API_KEY=